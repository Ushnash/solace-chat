<core:View
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="solchat.controller.SolChat"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<Shell id="appShell">
		<TabContainer
			id="chatTabContainer"
			visible="true"
			showAddNewButton="true"
			itemClose=""
			itemSelect=""
			addNewButtonPress="addNewChatTab">
			<dependents>
				<Dialog
					id="enterAddressDialog"
					title="Enter Topic/Queue Details"
					showHeader="true"
					contentWidth="500px"
					contentHeight="150px"
					horizontalScrolling="true"
					verticalScrolling="true"
					resizable="true">
					<tooltip></tooltip> <!-- sap.ui.core.TooltipBase -->
					<content>
						<List
							id="inputList"
							showSeparators="None">
							<InputListItem
								id="channelNameInputListItem"
								type="Inactive"
								visible="true"
								highlight="None"
								label="Name"
								width="50px"
								labelTextDirection="Inherit">
								<content>
									<Input
										id="channelNameInput"
										placeholder="name"
										type="Text"
										width="350px" />
								</content>
							</InputListItem>
							<InputListItem
								id="channelAddresssInputListItem"
								type="Inactive"
								visible="true"
								highlight="None"
								label="Address"
								width="50px"
								labelTextDirection="Inherit">
								<content>
									<Input
										id="channelAddressInput"
										placeholder="address"
										type="Text"
										width="350px" />
								</content>
							</InputListItem>
						</List>
					</content>
					<buttons>
						<Button
							id="acceptButton"
							visible="true"
							text="Accept"
							type="Accept"
							enabled="true"
							icon="sap-icon://accept"
							iconFirst="true"
							activeIcon=""
							iconDensityAware="true"
							textDirection="Inherit"
							press="onAddressDialogAccept">
						</Button>
						<Button
							id="cancelButton"
							visible="true"
							text="cancel"
							type="Reject"
							enabled="true"
							icon="sap-icon://decline"
							iconFirst="true"
							activeIcon=""
							iconDensityAware="true"
							textDirection="Inherit"
							press="onAddressDialogCancel">
						</Button>
					</buttons>
				</Dialog>

			</dependents>
		</TabContainer>
	</Shell>
</core:View>