<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="solchat.controller.SolChat" xmlns:html="http://www.w3.org/1999/xhtml">

  <Shell>

    <App>
      <Page id="chatPage">

        <headerContent>
          <Button icon="sap-icon://disconnected" press="onConnect"/>
        </headerContent>

        <content>

          <VBox width="100%" height="80%">
            <List id="feedList" showSeparators="Inner" items="{/EntryCollection}" showNoData="false" inset="true">
              <FeedListItem text="{Text}" timestamp="{Timestamp}" showIcon="false"/>
            </List>
          </VBox>

          <FeedInput id="feedInput" enabled="true" maxLength="255" placeholder="Enter your message here" showIcon="false" visible="false" buttonTooltip="Submit" post="onFeedInputPost"/>
        </content>

        <dependents>
          <Dialog id="LoginDialog" title="Login to PubSub+" state="None">
            <content>
              <f:SimpleForm id="LoginDetailsForm" editable="true">
                <f:content>
                  <Label text="Username"/>
                  <Input id="username" placeholder="Enter username"/>
                  <Label text="Password"/>
                  <Input id="password" type="password" placeholder="Enter password"/>
                </f:content>
              </f:SimpleForm>
            </content>
            <buttons>
              <Button text="Connect" type="Accept" press="onConnect"/>
            </buttons>
          </Dialog>

        </dependents>
      </Page>
    </App>
  </Shell>
</mvc:View>
