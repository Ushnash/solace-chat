<mvc:View
 xmlns:core="sap.ui.core"
 xmlns:mvc="sap.ui.core.mvc"
 xmlns="sap.m"
 controllerName="solchat.controller.SolChat"
 xmlns:html="http://www.w3.org/1999/xhtml">

 <Shell>

  <App>
   <Page id="chatPage">

    <headerContent>
     <core:Icon src="sap-icon://cloud" />
     <Label text="Solace PubSub+" />
    </headerContent>
    <content>
     <FeedInput
      id="feedInput"
      enabled="true"
      maxLength="255"
      placeholder="Enter your message here"
      showIcon="false"
      visible="false"
      buttonTooltip="Submit"
      post="onFeedInputPost" />

     <List
      id="feedList"
      showSeparators="Inner"
      items="{/EntryCollection}"
      showNoData="false"
      inset="true">
      <FeedListItem
       text="{Text}"
       timestamp="{Timestamp}"
       showIcon="false" />
     </List>
    </content>

    <footer>
     <Toolbar>
      <ToolbarSpacer />
      <Input id="channelInput" />
      <Button
       text="Connect"
       icon="sap-icon://citizen-connect"
       type="Accept"
       press="onConnectPress" />
     </Toolbar>
    </footer>

    <dependents>
     <Dialog
      id="errorTopicDialog"
      visible="true"
      title="Error"
      showHeader="true"
      type="Standard"
      state="Error">
      <content>
       <Text text="Please provide a topic or queue name" />
      </content>
      <buttons>
       <Button
        text="OK"
        type="Default"
        enabled="true"
        press="onDialogAccept" />
      </buttons>
     </Dialog>
    </dependents>
   </Page>
  </App>
 </Shell>
</mvc:View>